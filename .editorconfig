# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false
tab_width = 4
max_line_length = 100

[*.{php,yaml,yml,json,twig,xml,xsd,xsl}]
indent_size = 4

[*.sql]
max_line_length = 160