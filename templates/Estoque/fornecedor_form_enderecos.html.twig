<div class="tab-pane fade" id="enderecos" role="tabpanel" aria-labelledby="enderecos-tab">

    {% if e.id %}

        {% if e.jsonData.enderecos|default(false) %}



            <div class="card">
                <div class="card-body">

                    <div class="table-responsive-sm">
                        <table class="table table-striped table-hover">

                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Endereço</th>
                                <th scope="col">Cidade</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for endereco in e.jsonData.enderecos %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ endereco.tipo|default('') }}</td>
                                    <td>{{ endereco.logradouro|default('') }}, {{ endereco.numero|default('') }}
                                        - {{ endereco.complemento|default('') }} (CEP: {{ endereco.cep|default('') }})
                                    </td>
                                    <td>{{ endereco.cidade|default('') }}, {{ endereco.estado|default('') }}</td>

                                    <td class="text-right">
                                        <button type="button" class="btn btn-sm btn-primary btnEditEndereco"
                                                data-i="{{ loop.index0 }}"
                                                data-tipo="{{ endereco.tipo|default('') }}"
                                                data-logradouro="{{ endereco.logradouro|default('') }}"
                                                data-numero="{{ endereco.numero|default('') }}"
                                                data-complemento="{{ endereco.complemento|default('') }}"
                                                data-bairro="{{ endereco.bairro|default('') }}"
                                                data-cep="{{ endereco.cep|default('') }}"
                                                data-cidade="{{ endereco.cidade|default('') }}"
                                                data-estado="{{ endereco.estado|default('') }}">
                                            <i class="fas fa-wrench" aria-hidden="true"></i>
                                        </button>

                                        <button type="button" class="btn btn-sm btn-danger"
                                                data-url="{{ url('crm_cliente_deleteEndereco', {'cliente': e.id, 'i': loop.index0}) }}"
                                                data-token="{{ csrf_token('crm_cliente_deleteEndereco') }}"
                                                data-target="#confirmationModal" data-toggle="modal">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>

                        </table>
                    </div>

                </div>
            </div>

        {% endif %}

        <fieldset>


                <input type="hidden" id="endereco_i" name="endereco[i]"/>
                <input type="hidden" name="tokenSalvarEndereco"
                       value="{{ csrf_token('tokenSalvarEndereco') }}"/>


                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="" for="endereco_estado">Tipo</label>
                            <select id="endereco_tipo" autocomplete="off"
                                    name="endereco[tipo][]" multiple
                                    class="form-control campo-endereco"
                                    data-options="{{ enderecoTipos|default('{}') }}"
                                    aria-hidden="true">
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">


                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="endereco_logradouro">Logradouro</label>
                            <input type="text" id="endereco_logradouro"
                                   name="endereco[logradouro]" class="form-control campo-endereco"
                                   value="">
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12">
                        <div class="form-group">
                            <label for="endereco_numero">Número</label>
                            <input type="text" id="endereco_numero"
                                   name="endereco[numero]"
                                   class="form-control campo-endereco"
                                   value="">
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12">
                        <div class="form-group">
                            <label for="endereco_complemento">Complemento</label>
                            <input type="text" id="endereco_complemento"
                                   name="endereco[complemento]" class="form-control campo-endereco"
                                   value="">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="endereco_bairro">Bairro</label>
                            <input type="text" id="endereco_bairro"
                                   name="endereco[bairro]"
                                   class="form-control campo-endereco"
                                   value="">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="endereco_cidade">Cidade</label>
                            <input type="text" id="endereco_cidade"
                                   name="endereco[cidade]"
                                   class="form-control campo-endereco"
                                   value="">
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-12">
                        <div class="form-group">
                            <label class="" for="endereco_estado">Estado</label>
                            <select id="endereco_estado"
                                    name="endereco[estado]"
                                    class="form-control campo-endereco"
                                    aria-hidden="true">
                                <option value=""></option>
                                <option value="AC">AC</option>
                                <option value="AL">AL</option>
                                <option value="AP">AP</option>
                                <option value="AM">AM</option>
                                <option value="BA">BA</option>
                                <option value="CE">CE</option>
                                <option value="DF">DF</option>
                                <option value="ES">ES</option>
                                <option value="GO">GO</option>
                                <option value="MA">MA</option>
                                <option value="MT">MT</option>
                                <option value="MS">MS</option>
                                <option value="MG">MG</option>
                                <option value="PA">PA</option>
                                <option value="PB">PB</option>
                                <option value="PR">PR</option>
                                <option value="PE">PE</option>
                                <option value="PI">PI</option>
                                <option value="RJ">RJ</option>
                                <option value="RN">RN</option>
                                <option value="RS">RS</option>
                                <option value="RO">RO</option>
                                <option value="RR">RR</option>
                                <option value="SC">SC</option>
                                <option value="SP">SP</option>
                                <option value="SE">SE</option>
                                <option value="TO">TO</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="endereco_cep">CEP</label>
                            <div class="input-group">
                                <input type="text" id="endereco_cep" data-prefixodoscampos="endereco_"
                                       name="endereco[cep]" class="cepComBtnConsulta form-control campo-endereco"
                                       maxlength="9">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">

                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar" id="btnSalvarEndereco"
                                name="btnSalvarEndereco">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>

                        <a role="button" class="btn btn-secondary" id="btnRecarregar"
                            href="{{ url(formRoute, {'id': e.id}) }}">
                            <i class="fas fa-redo-alt"></i> Recarregar
                        </a>

                    </div>
                </div>


        </fieldset>

    {% endif %}

</div>
