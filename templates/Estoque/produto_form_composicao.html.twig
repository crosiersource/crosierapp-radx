<div class="tab-pane fade" id="composicao" role="tabpanel" aria-labelledby="composicao-tab">

    {% if e.id %}
        <div class="card">

            <div class="card-body">

                <form action="{{ url('est_produto_formComposicao', {'produto': e.id}) }}" method="post">

                    <input type="hidden" name="produtoComposicao[id]" id="produtoComposicao_id"/>


                    <div class="form-group row">
                        <label class="col-form-label col-sm-2" for="produtoComposicao_produtoFilho">Item</label>
                        <div class="col-sm-10">
                            <select id="produtoComposicao_produtoFilho" name="produtoComposicao[produtoFilho]"
                                    data-route-url="{{ url('est_produto_findProdutoByIdNomeTituloJSON') }}"
                                    data-placeholder="Selecione..."
                                    class="form-control autoSelect2"></select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label col-sm-2" for="produtoComposicao_qtde">Qtde</label>
                        <div class="col-sm-10">
                            <input type="number" min="0" id="produtoComposicao_qtde" name="produtoComposicao[qtde]"
                                   class="form-control integer">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label col-sm-2" for="produtoComposicao_precoComposicao">Pre√ßo
                            (Compo)</label>
                        <div class="col-sm-10">
                            <input id="produtoComposicao_precoComposicao" name="produtoComposicao[precoComposicao]"
                                   class="form-control money">
                        </div>
                    </div>

                    <div class="form-group row col-12">
                        <div class="ml-auto">

                            <button type="submit" class="btn btn-primary" value="Salvar">
                                <i class="fas fa-save" aria-hidden="true"></i> Salvar
                            </button>

                        </div>
                    </div>

                </form>

                <div class="table-responsive-sm">
                    <table class="table table-striped table-hover">

                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col" class="text-nowrap">
                                Em Estoque
                            </th>
                            <th scope="col">Item</th>
                            <th scope="col" class="text-nowrap">
                                Qtde
                            </th>
                            <th scope="col" class="text-nowrap">
                                Vlr Unit
                            </th>
                            <th scope="col">Total</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>

                        <tbody id="tbodySortableComposicao">
                        {% for produtoComposicao in e.composicoes %}
                            <tr data-id="{{ produtoComposicao.id }}">
                                <td id="ordem">{{ produtoComposicao.ordem }}</td>
                                <td class="text-right">
                                    {{ produtoComposicao.qtdeEmEstoque }}
                                    {% if produtoComposicao.qtdeEmEstoque < produtoComposicao.qtde %}
                                        <br/>
                                        <span class="badge badge-warning">Em falta</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ produtoComposicao.produtoFilho.titulo ? produtoComposicao.produtoFilho.titulo : produtoComposicao.produtoFilho.nome }}
                                    ({{ produtoComposicao.produtoFilho.id }})
                                </td>
                                <td class="text-right">
                                    {{ produtoComposicao.qtde }}
                                </td>
                                <td class="text-right text-nowrap">
                                    {% if produtoComposicao.precoAtual != produtoComposicao.precoComposicao %}
                                        <span style="color: grey; font-size: small">De: {{ produtoComposicao.precoAtual|number_format(2,',','.') }}</span>
                                        <br/>
                                        Por:
                                    {% endif %}{{ produtoComposicao.precoComposicao|number_format(2,',','.') }}

                                </td>
                                <td class="text-right">
                                    {{ produtoComposicao.totalComposicao|number_format(2,',','.') }}
                                </td>

                                <td class="text-right text-nowrap">
                                    <button type="button" class="btn btn-sm btn-warning btnComposicaoEdit"
                                            data-json="{{ produtoComposicao|serializeEntity }}">
                                        <i class="fa fa-wrench" aria-hidden="true"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-danger"
                                            data-url="{{ url('est_produtoComposicao_delete', {'produtoComposicao': produtoComposicao.id}) }}"
                                            data-token="{{ csrf_token('delete') }}"
                                            data-target="#confirmationModal" data-toggle="modal">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr style="background-color: lightgrey; font-weight: bold">
                            <td colspan="2"></td>
                            <td class="text-right">{{ e.composicaoQtdeTotal }}</td>
                            <td></td>
                            <td class="text-right">{{ e.composicaoValorTotal|number_format(2,',','.') }}</td>
                            <td colspan="2"></td>
                        </tr>
                        </tfoot>

                    </table>
                </div>


            </div>
        </div>
    {% endif %}

</div>
