<div class="tab-pane fade" id="composicao" role="tabpanel" aria-labelledby="composicao-tab">

    {% if e.id %}
        <div class="card">

            <div class="card-body">


                <input type="hidden" name="produtoComposicao[id]" id="produtoComposicao_id"/>

                <div class="form-group row">
                    <label class="col-form-label col-sm-2" for="produtoComposicao_produtoFilho">Item</label>
                    <div class="col-sm-10">
                        <select id="produtoComposicao_produtoFilho" name="produtoComposicao[produtoFilho]"
                                data-route-url="{{ url('est_produto_findProdutoByIdNomeTituloJSON') }}"
                                data-placeholder="Selecione..."
                                class="form-control autoSelect2"></select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-form-label col-sm-2" for="produtoComposicao_qtde">Qtde</label>
                    <div class="col-sm-10">
                        <input type="number" min="0" id="produtoComposicao_qtde" name="produtoComposicao[qtde]"
                               class="form-control integer">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-form-label col-sm-2" for="produtoComposicao_precoComposicao">Preço na Composição</label>
                    <div class="col-8">
                        <input id="produtoComposicao_precoComposicao" name="produtoComposicao[precoComposicao]"
                               class="form-control money">
                    </div>
                    <div class="col-2 ml-auto text-right">

                        <button type="button" id="btnSalvarItemComposicao" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>

                    </div>
                </div>


                <div class="table-responsive-sm" id="divTbComposicao">
                    {% include '/Estoque/produto_form_composicao_divTbComposicao.html.twig' %}
                </div>


            </div>
        </div>
    {% endif %}

</div>
