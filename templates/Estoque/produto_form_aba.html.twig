<div class="tab-pane fade" id="{{ kAba|lower|transliterate }}" role="tabpanel"
     aria-labelledby="{{ kAba|lower|transliterate }}-tab">

    <div class="container" style="margin-bottom: 50px">

        {% for kGrupo,campos in vAba %}

            {% for produtoAtributo in campos %}
                {% if produtoAtributo.atributo.visivel == 'S' %}
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2" for="">{{ produtoAtributo.atributo.label }}</label>
                        <div class="col-sm-10">
                            {{ buildAtributoInput('produtoForm', 'produtoAtributo', produtoAtributo.atributo.id, produtoAtributo.atributo.tipo, produtoAtributo.valor) }}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

        {% endfor %}


        <div class="row mt-3">
            <div class="col text-right">


                <button type="submit" form="produtoForm" class="btn btn-primary" value="Salvar">
                    <i class="fas fa-save" aria-hidden="true"></i> Salvar
                </button>

            </div>
        </div>


    </div>


</div>