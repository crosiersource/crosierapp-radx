                                                        data-url="{{ url('est_deptoGrupoSubgrupo_integraGrupo', {'grupo': grupo.id}) }}"
                                                        data-target="#confirmationModal" data-toggle="modal" title="Integrar com ecommerce">
                                                    <i class="fas fa-cloud-upload-alt"></i>
                                                </button>

                                                <button type="submit" class="btn btn-sm btn-primary" value="Salvar">
                                                    <i class="fas fa-save" aria-hidden="true"></i> Salvar
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger"
                                                        data-url="{{ url('est_deptoGrupoSubgrupo_grupoDelete', {'grupo' : grupo.id}) }}"
                                                        data-target="#confirmationModal" data-toggle="modal">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </form>
                                {% endfor %}
                                <form action="{{ url('est_deptoGrupoSubgrupo_grupoSave') }}" method="post">
                                    <tr>
                                        <td>
                                            <input type="hidden" name="grupo[deptoId]" id="grupo_deptoId"
                                                   value="{{ deptoSelected.id }}">
                                        </td>
                                        <td><input type="text" class="form-control" name="grupo[codigo]"
                                                   id="grupo_codigo">
                                        </td>
                                        <td><input type="text" class="form-control notuppercase" name="grupo[nome]" id="grupo_nome">
                                        </td>
                                        <td class="text-right">
                                            <button type="submit" class="btn btn-primary" value="Salvar">
                                                <i class="fas fa-save" aria-hidden="true"></i> Salvar
                                            </button>
                                        </td>
                                    </tr>
                                </form>
                                </tbody>

                            </table>
                        </div>
                    </fieldset>
                {% endif %}



                {% if grupoSelected is defined %}
                    <fieldset>
                        <legend>Subgrupos</legend>

                        <div class="table-responsive-sm">
                            <table class="table table-striped table-hover">

                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Código</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col"></th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for subgrupo in grupoSelected.subgrupos %}
                                    <form id="subgrupo_form_{{ subgrupo.id }}" name="subgrupo_form[{{ subgrupo.id }}]"
                                          action="{{ url('est_deptoGrupoSubgrupo_subgrupoSave') }}" method="post">
                                        <tr>
                                            <td>
                                                {{ loop.index }}
                                            </td>
                                            <td>
                                                <input type="hidden" name="subgrupo[id]" id="subgrupo_id"
                                                       value="{{ subgrupo.id }}">
                                                <input type="hidden" name="subgrupo[grupoId]" id="subgrupo_grupoId"
                                                       value="{{ subgrupo.grupo.id }}">
                                                <input type="text" class="form-control" name="subgrupo[codigo]"
