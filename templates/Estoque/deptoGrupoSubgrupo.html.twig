                                                       value="{{ subgrupo.nome }}">
                                            </td>
                                            <td class="text-right">

                                                {% if subgrupo.jsonData.ecommerce_id|default(null) %}
                                                    <span class="badge badge-secondary">{{ subgrupo.jsonData.ecommerce_id }}</span>
                                                {% endif %}

                                                <button type="button" class="btn btn-sm btn-outline-warning"
                                                        data-url="{{ url('est_deptoGrupoSubgrupo_integraSubgrupo', {'subgrupo': subgrupo.id}) }}"
                                                        data-target="#confirmationModal" data-toggle="modal" title="Integrar com ecommerce">
                                                    <i class="fas fa-cloud-upload-alt"></i>
                                                </button>

                                                <button type="submit" class="btn btn-sm btn-primary" value="Salvar">
                                                    <i class="fas fa-save" aria-hidden="true"></i> Salvar
                                                </button>

                                                <button type="button" class="btn btn-sm btn-danger"
                                                        data-url="{{ url('est_deptoGrupoSubgrupo_subgrupoDelete', {'subgrupo' : subgrupo.id}) }}"
                                                        data-target="#confirmationModal" data-toggle="modal">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </form>
                                {% endfor %}
                                <form action="{{ url('est_deptoGrupoSubgrupo_subgrupoSave') }}" method="post">
                                    <tr>
                                        <td>
                                            <input type="hidden" name="subgrupo[grupoId]" id="subgrupo_grupoId"
                                                   value="{{ grupoSelected.id }}">
                                        </td>
                                        <td><input type="text" class="form-control" name="subgrupo[codigo]"
                                                   id="subgrupo_codigo">
                                        </td>
                                        <td><input type="text" class="form-control notuppercase" name="subgrupo[nome]" id="subgrupo_nome">
                                        </td>
                                        <td class="text-right">
                                            <button type="submit" class="btn btn-primary" value="Salvar">
                                                <i class="fas fa-save" aria-hidden="true"></i> Salvar
                                            </button>
                                        </td>
                                    </tr>
                                </form>
                                </tbody>

                            </table>
                        </div>
                    </fieldset>
                {% endif %}

            </div>

        </div>

    </div>



{% endblock %}

