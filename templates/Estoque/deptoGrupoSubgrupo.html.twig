{% extends '@CrosierLibBase/index.html.twig' %}


{% block page_content %}


    <div class="container" style="margin-bottom: 50px">
        <div class="card">


            <div class="card-body">


                <fieldset>
                    <legend>Deptos</legend>

                    <div class="table-responsive-sm">
                        <table class="table table-striped table-hover">

                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Código</th>
                                <th scope="col">Nome</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for depto in deptos %}
                                <form id="depto_form_{{ depto.id }}" name="depto_form[{{ depto.id }}]"
                                      action="{{ url('est_deptoGrupoSubgrupo_deptoSave') }}" method="post">
                                    <tr style="background-color: {{ deptoSelected is defined and depto.id == deptoSelected.id ? 'lightblue' : '' }}">

                                        <td style="cursor: pointer" onclick="window.location = '{{ url('est_deptoGrupoSubgrupo_form', {'deptoId': depto.id}) }}'">
                                            {{ loop.index }}
                                        </td>
                                        <td>
                                            <input type="hidden" name="depto[id]" id="depto_id" value="{{ depto.id }}">
                                            <input type="text" class="form-control" name="depto[codigo]"
                                                   id="depto_codigo" value="{{ depto.codigo }}">
                                        </td>
                                        <td>
                                            <input type="text" class="form-control notuppercase" name="depto[nome]" id="depto_nome"
                                                   value="{{ depto.nome }}">
                                        </td>
                                        <td class="text-right">

                                            {% if depto.jsonData.ecommerce_id|default(null) %}
                                                <span class="badge badge-secondary">{{ depto.jsonData.ecommerce_id }}</span>
                                            {% endif %}

                                            <button type="button" class="btn btn-sm btn-outline-warning"
                                                    data-url="{{ url('est_deptoGrupoSubgrupo_integraDepto', {'depto': depto.id}) }}"
                                                    data-target="#confirmationModal" data-toggle="modal" title="Integrar com ecommerce">
                                                <i class="fas fa-cloud-upload-alt"></i>
                                            </button>

                                            <button type="submit" class="btn btn-sm btn-primary" value="Salvar">
                                                <i class="fas fa-save" aria-hidden="true"></i> Salvar
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger"
                                                    data-url="{{ url('est_deptoGrupoSubgrupo_deptoDelete', {'depto' : depto.id}) }}"
                                                    data-target="#confirmationModal" data-toggle="modal">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </form>
                            {% endfor %}
                            <form action="{{ url('est_deptoGrupoSubgrupo_deptoSave') }}" method="post">
                                <tr>
                                    <td></td>
                                    <td><input type="text" class="form-control" name="depto[codigo]" id="depto_codigo">
                                    </td>
                                    <td><input type="text" class="form-control notuppercase" name="depto[nome]" id="depto_nome"></td>
                                    <td class="text-right">
                                        <button type="submit" class="btn btn-primary" value="Salvar">
                                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                                        </button>
                                    </td>
                                </tr>
                            </form>
                            </tbody>

                        </table>
                    </div>
                </fieldset>

                {% if deptoSelected is defined %}
                    <fieldset>
                        <legend>Grupos</legend>

                        <div class="table-responsive-sm">
                            <table class="table table-striped table-hover">

                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Código</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col"></th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for grupo in deptoSelected.grupos %}
                                    <form id="grupo_form_{{ grupo.id }}" name="grupo_form[{{ grupo.id }}]"
                                          action="{{ url('est_deptoGrupoSubgrupo_grupoSave') }}" method="post">
                                        <tr style="background-color: {{ grupoSelected is defined and grupo.id == grupoSelected.id ? 'lightblue' : '' }}">

                                            <td style="cursor: pointer" onclick="window.location = '{{ url('est_deptoGrupoSubgrupo_form', {'grupoId': grupo.id}) }}'">
                                                {{ loop.index }}
                                            </td>
                                            <td>
                                                <input type="hidden" name="grupo[id]" id="grupo_id"
                                                       value="{{ grupo.id }}">
                                                <input type="hidden" name="grupo[deptoId]" id="grupo_deptoId"
                                                       value="{{ grupo.depto.id }}">
                                                <input type="text" class="form-control notuppercase" name="grupo[codigo]"
                                                       id="grupo_codigo" value="{{ grupo.codigo }}">
                                            </td>
                                            <td>
                                                <input type="text" class="form-control notuppercase" name="grupo[nome]"
                                                       id="grupo_nome"
                                                       value="{{ grupo.nome }}">
                                            </td>
                                            <td class="text-right">

                                                {% if grupo.jsonData.ecommerce_id|default(null) %}
