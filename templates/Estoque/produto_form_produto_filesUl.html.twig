<div class="col-sm-12 overflow-auto">
    <ul class="list-group list-group-horizontal" id="ulFotosSortable">
        {% for imagem in e.imagens %}
            <li data-id="{{ imagem.id }}"
                class="list-group-item {{ imagemId is defined and imagemId == imagem.id ? 'active' : '' }}">

                <div>
                    <div class="form-inline d-flex flex-nowrap">
                        <label for="produto_imagem_descricao_{{ imagem.id }}">#<span class="ordem">{{ imagem.ordem }}</span>) </label>
                        <input type="text" class="form-control mr-1 ml-1 notuppercase produto_imagem_descricao" data-produtoimagemid="{{ imagem.id }}"
                               name="produto_imagem[descricao][{{ imagem.id }}]" id="produto_imagem_descricao_{{ imagem.id }}"
                               value="{{ imagem.descricao }}">
                        <button type="button" class="btn btn-sm btn-outline-primary btnImagemEdit" data-produtoimagemid="{{ imagem.id }}">
                            <i class="fas fa-save" aria-hidden="true"></i>
                        </button>

                        <button type="button" class="btn btn-sm btn-outline-danger"
                                data-url="{{ url('est_produtoImagem_delete', {produtoImagem: imagem.id}) }}"
                                data-token="{{ csrf_token('deleteImagem') }}"
                                data-target="#confirmationModal" data-toggle="modal">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </div>


                </div>

                <div class="pt-3">
                    <a href="{{ vich_uploader_asset(imagem, 'imageFile') }}"
                       data-lightbox="imagensDoProduto" data-title="{{ imagem.descricao }}">
                        <img src="{{ vich_uploader_asset(imagem, 'imageFile') }}"
                             alt="{{ imagem.descricao }}" style="border: 1px dashed lightblue"
                             width="200px"/>
                    </a>
                </div>

            </li>
        {% endfor %}
    </ul>
</div>