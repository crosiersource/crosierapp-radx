{% extends '@CrosierLibBase/index.html.twig' %}


{% block page_content %}

    <div class="container" style="margin-bottom: 50px">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>{{ formPageTitle }}</h3>
                        {% if formPageSubTitle is defined %}
                            <h6>{{ formPageSubTitle }}</h6>
                        {% endif %}
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-primary"
                                onclick="window.location.href='{{ url(formRoute, formRouteParams|default([])) }}'">
                            <i class="fas fa-file" aria-hidden="true"></i> Novo
                        </button>
                        {% if atributoPai.id|default('') != '' %}
                            <button type="button" class="btn btn-outline-secondary"
                                    onclick="window.location.href='{{ url(formRoute, {'id':atributoPai.id}) }}'">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </button>
                        {% endif %}
                    </div>

                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

                {{ form_start(form) }}
                {{ form_widget(form) }}

                <div class="row mt-2 mb-3">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" style="width: 200px" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>

                {% if e.id %}
                    <div class="card">
                        <div class="card-body">

                            <div class="card-title">
                                <div class="row">
                                    <div class="col-8">
                                        <h5>Atributos</h5>
                                    </div>
                                </div>
                            </div>


                            <table class="table table-striped table-hover display compact">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Atributo</th>
                                    <th scope="col">Label</th>
                                    <th scope="col"></th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for atributo in e.atributos %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ atributo.descricao }}</td>
                                        <td>{{ atributo.label }}</td>
                                        <td class="text-right">
                                            <button type="button" class="btn btn-sm btn-danger"
                                                    data-url="{{ url('est_grupoAtributo_removerAtributo', {'grupoAtributo': e.id, 'atributo': atributo.id}) }}"
                                                    data-token="{{ csrf_token('delete') }}"
                                                    data-target="#confirmationModal" data-toggle="modal">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                            </button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                <tr>

                                    <td colspan="3">
                                        <select id="atributo" name="atributo"
                                                data-options="{{ atributosOptions }}"
                                                data-placeholder="Selecione..."
                                                class="form-control autoSelect2"></select>
                                    </td>
                                    <td class="text-right">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-plus" aria-hidden="true"></i> Adicionar
                                        </button>
                                    </td>
                                </tr>
                                </tbody>
                            </table>


                        </div>
                    </div>
                {% endif %}

                {{ form_end(form) }}


            </div>
        </div>
    </div>


{% endblock %}