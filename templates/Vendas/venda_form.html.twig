{% extends '@CrosierLibBase/index.html.twig' %}


{% block page_content %}


    <div class="container">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Venda</h3>
                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_layout.html.twig' %}

                {{ form_start(form) }}
                {{ form_widget(form._token) }}


                <div class="row">
                    <div class="col-md-2 col-sm-12">
                        {{ form_row(form.id) }}
                    </div>
                    <div class="col-md-2 col-sm-12">
                        {{ form_row(form.dtVenda) }}
                    </div>
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.status) }}
                    </div>
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.jsonData.canal) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.vendedor) }}
                    </div>
                    <div class="col-md-5 col-sm-12">
                        {{ form_row(form.cliente) }}
                    </div>
                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.planoPagto) }}
                    </div>
                </div>


                <div class="row mb-3">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>


                <div class="card">
                    <div class="card-header">

                        <div class="row">
                            <div class="col-8">
                                <h5>Itens</h5>
                            </div>
                        </div>

                    </div>

                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-4 col-sm-12">

                                <div class="form-group">
                                    <label for="item_produto">Produto</label>
                                    <input type="hidden" id="item_id" name="item[id]">
                                    <select id="item_produto" name="item[produto]" class="form-control {{ e.id ? 'focusOnReady' : '' }}">
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-2 col-sm-12">
                                <div class="form-group">
                                    <label for="item_qtde">Qtde</label>
                                    <div class="input-group">
                                        <input type="text" id="item_qtde" name="item[qtde]"
                                               class="crsr-dec3 form-control">
                                        <div class="input-group-append">
                                            <span class="input-group-text" id="item_unidade">UN</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 col-sm-12">
                                <div class="form-group">
                                    <label for="item_precoVenda">Vlr Un</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">R$</span>
                                        </div>
                                        <input type="text" id="item_precoVenda" name="item[precoVenda]"
                                               readonly="readonly" class="crsr-money form-control disabled">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 col-sm-12">
                                <div class="form-group">
                                    <label for="item_desconto">Desc</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">R$</span>
                                        </div>
                                        <input type="text" id="item_desconto" name="item[desconto]"
                                               class="crsr-money form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 col-sm-12">
                                <div class="form-group">
                                    <label for="item_valorTotal">Vlr Total</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">R$</span>
                                        </div>
                                        <input type="text" id="item_valorTotal" name="item[valorTotal]"
                                               readonly="readonly" class="crsr-money form-control disabled">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive-sm">
                            <table class="table table-sm table-striped table-hover">

                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Produto</th>
                                    <th scope="col">Qtde</th>
                                    <th scope="col">Vlr Unit</th>
                                    <th scope="col">Desc</th>
                                    <th scope="col">Total</th>
                                    <th scope="col"></th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for item in e.itens %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ item.id|strpad(9) }}{{ item.descricao }}</td>
                                        <td class="text-right">{{ item.qtde|number_format(2,',','.') }}</td>
                                        <td class="text-right">{{ item.precoVenda|number_format(2,',','.') }}</td>
                                        <td class="text-right">{{ item.desconto|number_format(2,',','.') }}</td>
                                        <td class="text-right">{{ item.total|number_format(2,',','.') }}</td>
                                        <td class="text-right">
                                            {% if e.status != 'FINALIZADO' %}

                                                <button type="button" class="btn btn-sm btn-primary btnEditProduto"
                                                        data-item-id="{{ item.id }}"
                                                        data-item-produto-id="{{ item.produto.id }}"
                                                        data-item-descricao="{{ item.descricao|default('') }}"
                                                        data-item-unidade="{{ item.produto.jsonData.unidade|default('') }}"
                                                        data-item-qtde="{{ item.qtde|default('') }}"
                                                        data-item-preco-venda="{{ item.precoVenda|default('') }}"
                                                        data-item-desconto="{{ item.desconto|number_format(2,',','.') }}">
                                                    <i class="fas fa-wrench" aria-hidden="true"></i>
                                                </button>

                                                <button type="button" class="btn btn-sm btn-danger"
                                                        data-url="{{ url('ven_venda_deleteItem', {'item': item.id}) }}"
                                                        data-token="{{ csrf_token('ven_venda_deleteItem') }}"
                                                        data-target="#confirmationModal" data-toggle="modal">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                </button>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>

                            </table>
                        </div>


                        <div class="row">
                            <div class="col-md-8 col-sm-12">
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-4" for="nota_fiscal_subtotal">Subtotal</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.subtotal) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 col-sm-12">
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-4" for="nota_fiscal_subtotal">Descontos</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.desconto) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 col-sm-12">
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-4" for="nota_fiscal_subtotal">Valor Total</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.valorTotal) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>


                {{ form_end(form, {'render_rest': false}) }}


            </div>
        </div>
    </div>





{% endblock %}


{% block down_scripts %}
    {{ encore_entry_script_tags('Vendas/venda_form') }}
{% endblock %}