{% extends '@CrosierLibBase/index.html.twig' %}


{% block page_content %}


    <div class="container">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Venda</h3>
                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_layout.html.twig' %}

                {{ form_start(form) }}
                {{ form_widget(form._token) }}


                <div class="row">
                    <div class="col-md-2 col-sm-12">
                        {{ form_row(form.id) }}
                    </div>
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.dtVenda) }}
                    </div>
                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.status) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-7 col-sm-12">
                        {{ form_row(form.cliente) }}
                    </div>
                    <div class="col-md-5 col-sm-12">
                        {{ form_row(form.planoPagto) }}
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.subtotal) }}
                    </div>
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.desconto) }}
                    </div>
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.valorTotal) }}
                    </div>
                </div>


                <div class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>


                {{ form_end(form, {'render_rest': false}) }}


            </div>
        </div>
    </div>





{% endblock %}


{% block down_scripts %}
    <script src="{{ asset('build/RH/colaborador_form.js') }}"></script>
{% endblock %}