{% extends '@CrosierLibBase/list.html.twig' %}

{% block btns %}
    {{ parent() }}

    <button type="button" class="btn btn-warning ml-3"
            data-url="{{ url('distDFe_obterDistDFes', {'redirectToRoute' : 'nfesFornecedores_list'}) }}"
            data-target="#confirmationModal" data-toggle="modal">
        <i class="fas fa-download"></i> Obter Notas
    </button>


{% endblock %}

{% block campos_pesquisar %}

    <div class="form-group">
        <label for="filter[numero]">Número</label>
        <input type="text" min="1"
               class="form-control" id="filter[numero]"
               name="filter[numero]"
               value="{{ filter.numero|default('') }}">
    </div>

    <div class="form-group">
        <label for="filter[documentoEmitente]">CPF/CNPJ Emitente</label>
        <input type="text"
               class="form-control cnpj" id="filter[documentoEmitente]"
               name="filter[documentoEmitente]"
               value="{{ filter.documentoEmitente|default('') }}">
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-sm">
                <label for="filter[dtEmissao][i]">Dt Emissão</label>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <input type="date"
                       size="15" class="form-control" name="filter[dtEmissao][i]"
                       value="{{ filter.dtEmissao.i|default('') }}">
            </div>
            <div class="col-sm-6">
                <input type="date"
                       size="15" class="form-control"
                       name="filter[dtEmissao][f]"
                       value="{{ filter.dtEmissao.f|default('') }}">
            </div>
        </div>
    </div>



{% endblock %}

{% block down_scripts %}
    <script src="{{ asset('build/Fiscal/nfesFornecedoresList.js') }}"></script>
{% endblock %}

