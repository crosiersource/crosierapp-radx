<div class="tab-pane fade" id="duplicatas" role="tabpanel" aria-labelledby="duplicatas-tab">

    {% if notaFiscal.id %}
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h5>Duplicatas</h5>
                    </div>
                    
                </div>

            </div>

            <div class="card-body">

                <div class="table-responsive-sm">
                    <table class="table table-striped table-hover">

                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Vencto</th>
                            <th scope="col">Valor</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for duplicata in notaFiscal.jsonData.duplicatas|default(null) %}
                            <tr>
                                <td>{{ duplicata.numero }}</td>
                                <td>{{ duplicata.vencto }}</td>
                                <td>{{ duplicata.valor|number_format(2,',','.') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>


            </div>
        </div>
    {% endif %}

</div>
