{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}

    <div class="container">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Carta de Correção</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-secondary"
                                onclick="window.location.href='{{ url('fis_emissaonfe_form', {id: notaFiscal.id} ) }}'">
                            <i class="fas fa-arrow-left"></i> Voltar
                        </button>
                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

                {{ form_start(form) }}

                {{ form_widget(form) }}

                <div class="row">
                    <div class="col text-right">
                        <button type="button" class="btn btn-primary" value="Salvar"
                                data-form="nota_fiscal_carta_correcao"
                                data-target="#confirmationModal" data-toggle="modal">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>

                    </div>
                </div>


                {{ form_end(form, {'render_rest': false}) }}


            </div>
        </div>
    </div>

{% endblock %}