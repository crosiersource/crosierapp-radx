<div class="tab-pane fade show active" id="cabecalho" role="tabpanel" aria-labelledby="cabecalho-tab">

    <div class="container" style="margin-bottom: 50px">
        {{ form_row(form.id) }}
        {{ form_row(form._token) }}

        {{ form_row(form.documentoEmitente) }}




        {{ form_row(form.infoStatus) }}


        <div style="display: none">
            {{ form_widget(form.tipoNotaFiscal) }}
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2 form-control-label">Número/Série/UUID</label>
            <div class="col-sm-2">
                {{ form_widget(form.numero) }}
            </div>
            <div class="col-sm-2">
                {{ form_widget(form.serie) }}
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.uuid) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2 form-control-label">Chave / Prot Autoriz</label>
            <div class="col-sm-6">
                {{ form_widget(form.chaveAcesso) }}
            </div>
            <div class="col-sm-4">
                {{ form_widget(form.protocoloAutorizacao) }}
            </div>
        </div>

        {{ form_row(form.dtEmissao) }}
        {{ form_row(form.dtSaiEnt) }}

        {{ form_row(form.naturezaOperacao) }}

        {{ form_row(form.finalidadeNf) }}
        {{ form_row(form.entradaSaida) }}


        <fieldset class="border p-2 mb-3">
            <legend class="w-auto p-2">Destinatário</legend>

            <div class="form-group row">
                {{ form_label(form.documentoDestinatario) }}
                <div class="col-sm-8">
                    {{ form_errors(form.documentoDestinatario) }}
                    {{ form_widget(form.documentoDestinatario) }}
                    {{ form_help(form.documentoDestinatario) }}
                </div>
                <div class="col-sm-2 text-right">
                    <button type="button" value="Consultar" class="btn btn-outline-info"
                            data-jsfunction="consultarCNPJDestinatario"
                            data-target="#confirmationModal" data-toggle="modal">
                        <i class="fas fa-search" aria-hidden="true"></i> Consultar
                    </button>
                </div>
            </div>

            {{ form_row(form.xNomeDestinatario) }}

            {{ form_row(form.inscricaoEstadualDestinatario) }}

            {{ form_row(form.cepDestinatario) }}

            {{ form_row(form.logradouroDestinatario) }}
            {{ form_row(form.numeroDestinatario) }}
            {{ form_row(form.bairroDestinatario) }}
            {{ form_row(form.cidadeDestinatario) }}
            {{ form_row(form.estadoDestinatario) }}

            <hr/>
            {{ form_row(form.foneDestinatario) }}
            {{ form_row(form.emailDestinatario) }}

        </fieldset>


        {{ form_row(form.transpModalidadeFrete) }}
        {{ form_row(form.indicadorFormaPagto) }}

        {{ form_row(form.infoCompl) }}
        {{ form_row(form.a03idNfReferenciada) }}

    </div>


</div>

