{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}

    <div class="container">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Carteira</h3>
                    </div>
                    <div class="col-4 text-right">

                        <a role="button" class="btn btn-info" href="{{ url('carteira_form') }}" title="Novo">
                            <i class="fas fa-file" aria-hidden="true"></i>
                        </a>

                        <a role="button" class="btn btn-outline-secondary" href="{{ url('carteira_list') }}" title="Listar">
                            <i class="fas fa-list" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_layout.html.twig' %}

                {{ form_start(form) }}

                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.codigo) }}
                    </div>
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.descricao) }}
                    </div>
                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.dtConsolidado) }}
                    </div>
                    <div class="col-md-2 col-sm-12">
                        {{ form_row(form.atual) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.concreta) }}
                    </div>
                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.abertas) }}
                    </div>
                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.caixa) }}
                    </div>
                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.cheque) }}
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.banco) }}
                    </div>
                    <div class="col-md-2 col-sm-12">
                        {{ form_row(form.agencia) }}
                    </div>
                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.conta) }}
                    </div>
                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.limite) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        {{ form_row(form.operadoraCartao) }}
                    </div>
                </div>


                <div class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>


                {{ form_end(form) }}


            </div>
        </div>
    </div>





{% endblock %}


{% block down_scripts %}


    <script>
        //Bind click to OK button within popup
        $('#btnYes').on(
            'click',
            function (e) {
                var modalDiv = $(e.delegateTarget);
                var url = $(this).data('url');
                var form = $('<form></form>').attr("method", "get").attr(
                    "action", url);
                $(form).appendTo('body').submit();

            });

    </script>

{% endblock %}