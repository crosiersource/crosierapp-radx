{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}

    <div class="container" style="margin-bottom: 50px">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-9">
                        <h3 id="formPageTitle">Movimentação</h3>
                        <h5>Lançamento Rápido</h5>
                    </div>
                    <div class="col-3 text-right">


                        {% if e.id %}
                            <div class="dropdown">
                                <button class="btn btn-block btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-cog" aria-hidden="true"></i> Opções
                                </button>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                                    <button type="button" class="dropdown-item"
                                            data-url="{{ url('fin_movimentacao_clonar', {id: e.id}) }}"
                                            data-token="{{ csrf_token('fin_movimentacao_clonar') }}"
                                            data-target="#confirmationModal" data-toggle="modal">
                                        <i class="far fa-clone"></i> Clonar
                                    </button>

                                    <button type="button" class="dropdown-item"
                                            data-url="{{ url('movimentacao_delete', {id: e.id}) }}"
                                            data-token="{{ csrf_token('delete') }}"
                                            data-target="#confirmationModal" data-toggle="modal">
                                        <i class="fa fa-trash" aria-hidden="true"></i> Deletar
                                    </button>
                                </div>
                            </div>
                        {% endif %}

                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_layout.html.twig' %}

                {{ form_start(form) }}

                {{ form_row(form._token) }}


                <div class="row">
                    <div class="col-md-2 col-sm-12">
                        {{ form_row(form.id) }}
                    </div>

                    <div class="col-md-10 col-sm-12">
                        {{ form_row(form.categoria) }}
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.carteira) }}
                    </div>

                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.modo) }}
                    </div>

                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.centroCusto) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.sacado) }}
                    </div>

                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.cedente) }}
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-8 col-sm-12">
                        {{ form_row(form.documentoBanco) }}
                    </div>

                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.documentoNum) }}
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-12">
                        {{ form_row(form.descricao) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-7 col-sm-12">
                        {{ form_row(form.dtMoviment) }}
                    </div>

                    <div class="col-md-5 col-sm-12">
                        {{ form_row(form.valor) }}
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-sm-12">
                        {{ form_row(form.obs) }}
                    </div>
                </div>


                <div style="margin-top: 20px" class="row">
                    <div class="col-sm-3 ml-auto">
                        <button type="submit" class="btn btn-block btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>

                </div>


                <div style="display:none">
                    {{ form_widget(form) }}
                </div>

                {{ form_end(form, {'render_rest': false}) }}

            </div>
        </div>
    </div>

{% endblock %}


{% block down_scripts %}
    {{ encore_entry_script_tags('Financeiro/movimentacaoForm_aPagarReceber') }}
{% endblock %}
