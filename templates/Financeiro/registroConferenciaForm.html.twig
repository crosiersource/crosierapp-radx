{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}


    <div class="container">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Registro de Conferência</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-secondary"
                                onclick="window.location.href='{{ url('registroConferencia_list') }}'">
                            <i class="fas fa-sync" aria-hidden="true"></i> Listar
                        </button>
                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

                {{ form_start(form) }}
                {{ form_widget(form) }}

                <div class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>

                        <button type="button" class="btn btn-outline-warning" value="Gerar Próximo"
                                data-url="{{ url('registroConferencia_gerarProximo', {id:e.id}) }}"
                                data-target="#confirmationModal" data-toggle="modal">
                            <i class="fas fa-wrench" aria-hidden="true"></i> Gerar Próximo
                        </button>

                        <button type="button" value="Resetar" class="btn btn-secondary"
                                data-url="{{ url('registroConferencia_form') }}"
                                data-target="#confirmationModal" data-toggle="modal">
                            <i class="fas fa-undo" aria-hidden="true"></i> Recarregar
                        </button>
                    </div>
                </div>


                {{ form_end(form) }}


            </div>
        </div>
    </div>





{% endblock %}


{% block down_scripts %}


    <script>
        //Bind click to OK button within popup
        $('#btnYes').on(
            'click',
            function (e) {
                var modalDiv = $(e.delegateTarget);
                var url = $(this).data('url');
                var form = $('<form></form>').attr("method", "get").attr(
                    "action", url);
                $(form).appendTo('body').submit();

            });

    </script>

{% endblock %}
