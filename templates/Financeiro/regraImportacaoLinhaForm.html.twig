{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}

    <div class="container">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Regra para Importação de Linha</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-secondary"
                                onclick="window.location.href='{{ url('regraImportacaoLinha_list') }}'">
                            <i class="fas fa-sync" aria-hidden="true"></i> Listar
                        </button>
                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_layout.html.twig' %}

                {{ form_start(form) }}

                <div class="row">
                    <div class="col-md-8 col-sm-12">
                        {{ form_row(form.regraRegexJava) }}
                    </div>

                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.tipoLancto) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.centroCusto) }}
                    </div>

                    <div class="col-md-8 col-sm-12">
                        {{ form_row(form.modo) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-7 col-sm-12">
                        {{ form_row(form.categoria) }}
                    </div>

                    <div class="col-md-2 col-sm-12">
                        {{ form_row(form.sinalValor) }}
                    </div>

                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.padraoDescricao) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.carteira) }}
                    </div>

                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.carteiraDestino) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5 col-sm-12">
                        {{ form_row(form.chequeBanco) }}
                    </div>

                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.chequeAgencia) }}
                    </div>

                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.chequeConta) }}
                    </div>
                </div>


                <div class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>


                {{ form_end(form) }}


            </div>
        </div>
    </div>





{% endblock %}

