{% extends '@CrosierLibBase/index.html.twig' %}

{% block up_scripts %}
    {{ encore_entry_link_tags('Financeiro/movimentacaoForm_caixa') }}
{% endblock %}



{% block page_content %}

    <div class="container" style="margin-bottom: 50px">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Movimentação de Caixa</h3>
                        <h6>Transação em Cartão</h6>
                    </div>
                    <div class="col-4 text-right">

                        <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top"
                                title="Novo registro"
                                onclick="window.location.href='{{ url(formRoute) }}'">
                            <i class="fas fa-file" aria-hidden="true"></i>
                        </button>

                        <button type="button" class="btn btn-secondary"
                                onclick="window.location.href='{{ url('movimentacao_caixa') }}'">
                            <i class="fas fa-sync" aria-hidden="true"></i> Listar
                        </button>

                        {% if e.id %}
                            <button type="button" class="btn btn-danger"
                                    data-url="{{ url('movimentacao_delete', {id: e.id}) }}"
                                    data-token="{{ csrf_token('delete') }}"
                                    data-target="#confirmationModal" data-toggle="modal">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        {% endif %}

                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_layout.html.twig' %}

                {{ form_start(form) }}

                {{ form_row(form._token) }}

                <div class="row">
                    <div class="col-md-8 col-sm-12">
                        {{ form_row(form.categoria) }}
                    </div>
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.modo) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-9">
                        {{ form_row(form.carteira) }}
                    </div>
                    <div class="col-sm-3">
                        {{ form_row(form.dtMoviment) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5 col-sm-12">
                        {{ form_row(form.operadoraCartao) }}
                    </div>
                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.bandeiraCartao) }}
                    </div>
                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.qtdeParcelasCartao) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.idTransacaoCartao) }}
                    </div>
                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.numCartao) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        {{ form_row(form.sacado) }}
                    </div><div class="col-sm-3">
                        {{ form_row(form.descricao) }}
                    </div>
                    <div class="col-sm-3">
                        {{ form_row(form.valor) }}
                    </div>
                </div>

                <div style="margin-top: 20px" class="row">
                    <div class="col">
                        {{ form_row(form.obs) }}
                    </div>
                </div>


                <div style="margin-top: 20px" class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>

                <div style="display:none">
                    {{ form_widget(form) }}
                </div>


                {{ form_end(form, {'render_rest': false}) }}


            </div>
        </div>
    </div>

{% endblock %}


{% block down_scripts %}
    {{ encore_entry_script_tags('Financeiro/movimentacaoForm_caixa_transacaoCartao') }}
{% endblock %}