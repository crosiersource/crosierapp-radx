{% extends '@CrosierLibBase/index.html.twig' %}

{% block page_content %}

    <div class="container" style="margin-bottom: 50px">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Lançamento de Movimentações</h3>
                    </div>
                </div>

            </div>

            <div class="card-body">

                <form action="{{ url('movimentacaoForm_ini') }}" method="get">

                    <div class="form-group row">
                        <label class="col-form-label col-sm-2 required" for="tipoLancto">Tipo de Lançamento</label>
                        <div class="col-sm-10">
                            <select class="form-control autoSelect2 focusOnReady"
                                    name="tipoLancto" id="tipoLancto"
                                    data-options="{{ tiposLanctos|default('') }}"></select>
                        </div>
                    </div>


                    <div style="margin-top: 20px" class="row">
                        <div class="col text-right">
                            <button type="submit" class="btn btn-primary" value="Iniciar">
                                <i class="far fa-play-circle"></i> Iniciar
                            </button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>

{% endblock %}