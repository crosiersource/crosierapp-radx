{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}

    <div class="container">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Item de Grupo de Movimentação</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-secondary"
                                onclick="window.location.href='{{ url('grupoItem_list', {'pai': pai.id}) }}'">
                            <i class="fas fa-sync" aria-hidden="true"></i> Listar
                        </button>
                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

                {{ form_start(form) }}
                {{ form_widget(form) }}

                <div class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>

                        <button type="button" value="Resetar" class="btn btn-secondary"
                                data-url="{{ url('grupo_form') }}"
                                data-target="#confirmationModal" data-toggle="modal">
                            <i class="fas fa-undo" aria-hidden="true"></i> Recarregar
                        </button>
                    </div>
                </div>


                {{ form_end(form) }}


            </div>
        </div>
    </div>





{% endblock %}
