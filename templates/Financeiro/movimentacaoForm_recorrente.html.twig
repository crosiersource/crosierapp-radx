{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}

    <div class="container" style="margin-bottom: 50px">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Movimentação Recorrente</h3>
                    </div>
                    <div class="col-4 text-right">

                        <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top"
                                title="Novo registro"
                                onclick="window.location.href='{{ url('movimentacao_form_recorrente') }}'">
                            <i class="fas fa-file" aria-hidden="true"></i> Novo
                        </button>

                        {% if e.id %}
                            <button type="button" class="btn btn-danger"
                                    data-url="{{ url('movimentacao_delete', {id: e.id}) }}"
                                    data-token="{{ csrf_token('delete') }}"
                                    data-target="#confirmationModal" data-toggle="modal">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        {% endif %}

                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_layout.html.twig' %}

                {{ form_start(form) }}

                {{ form_row(form._token) }}

                <div class="d-none">{{ form_row(form.id) }}</div>


                <div class="card" id="divCamposRecorrencia"
                     style="margin-top: 20px">
                    <h5 class="card-header">Recorrência</h5>
                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-2 col-sm-12">
                                {{ form_row(form.recorrDia) }}
                            </div>

                            <div class="col-md-4 col-sm-12">
                                {{ form_row(form.recorrTipoRepet) }}
                            </div>

                            <div class="col-md-3 col-sm-12">
                                {{ form_row(form.recorrFrequencia) }}
                            </div>

                            <div class="col-md-3 col-sm-12">
                                {{ form_row(form.recorrVariacao) }}
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-9 col-sm-12">
                        {{ form_row(form.categoria) }}
                    </div>

                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.centroCusto) }}
                    </div>
                </div>

                <div class="row">

                    <div class="col-md-7 col-sm-12">
                        {{ form_row(form.carteira) }}
                    </div>

                    <div class="col-md-5 col-sm-12">
                        {{ form_row(form.modo) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.sacado) }}
                    </div>

                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.cedente) }}
                    </div>
                </div>

                <div class="row">

                    <div class="col-sm-6">
                        
                    </div>


                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-12">

                                <div id="divCamposValores" class="card">

                                    <h5 class="card-header">Datas</h5>
                                    <div class="card-body">

                                        <div class="form-group row">
                                            <label class="col-form-label col-sm-4" for="movimentacao_dtMoviment">Dt Moviment</label>
                                            <div class="col-sm-8"> {{ form_widget(form.dtMoviment) }} </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-form-label col-sm-4" for="movimentacao_dtVencto">Dt Vencto</label>
                                            <div class="col-sm-8"> {{ form_widget(form.dtVencto) }} </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-form-label col-sm-4" for="movimentacao_dtVenctoEfet">Dt Vncto Efet</label>
                                            <div class="col-sm-8"> {{ form_widget(form.dtVenctoEfetiva) }} </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-sm-8">
                        {{ form_row(form.descricao) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_row(form.valor) }}
                    </div>
                </div>


                <div style="margin-top: 20px" class="row">
                    <div class="col">
                        {{ form_row(form.obs) }}
                    </div>
                </div>


                <div style="margin-top: 20px" class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>

                <div style="display:none">
                    {{ form_widget(form) }}
                </div>


                {{ form_end(form, {'render_rest': false}) }}


            </div>
        </div>
    </div>

{% endblock %}


{% block down_scripts %}
    {{ encore_entry_script_tags('Financeiro/movimentacaoForm_recorrente') }}
{% endblock %}