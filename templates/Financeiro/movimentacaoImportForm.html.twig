{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}

    <div class="container">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>Movimentação (Importada)</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="button" class="btn btn-secondary"
                                onclick="window.location.href='{{ url('movimentacao_import') }}'">
                            <i class="fas fa-sync" aria-hidden="true"></i> Listar
                        </button>
                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_layout.html.twig' %}

                {{ form_start(form) }}

                {{ form_row(form._token) }}


                <div class="row">

                    <div class="col-12">
                        {{ form_row(form.categoria) }}
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.carteira) }}
                    </div>

                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.modo) }}
                    </div>

                    <div class="col-md-3 col-sm-12">
                        {{ form_row(form.centroCusto) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.sacado) }}
                    </div>

                    <div class="col-md-6 col-sm-12">
                        {{ form_row(form.cedente) }}
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-8 col-sm-12">
                        {{ form_row(form.documentoBanco) }}
                    </div>

                    <div class="col-md-4 col-sm-12">
                        {{ form_row(form.documentoNum) }}
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-12">
                        {{ form_row(form.descricao) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-7 col-sm-12">
                        {{ form_row(form.dtPagto) }}
                    </div>

                    <div class="col-md-5 col-sm-12">
                        {{ form_row(form.valor) }}
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-12">
                        {{ form_row(form.obs) }}
                    </div>
                </div>

                <div style="margin-top: 20px" class="row">
                    <div class="col-sm-3 ml-auto">
                        <button type="submit" class="btn btn-block btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>

                <div style="display:none">
                    {{ form_widget(form) }}
                </div>


                {{ form_end(form) }}


            </div>
        </div>
    </div>





{% endblock %}


{% block down_scripts %}
    {{ encore_entry_script_tags('Financeiro/movimentacaoForm_aPagarReceber') }}
{% endblock %}
