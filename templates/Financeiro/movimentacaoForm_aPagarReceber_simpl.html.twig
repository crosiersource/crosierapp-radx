{% extends '@CrosierLibBase/index.html.twig' %}




{% block page_content %}

    <div class="container" style="margin-bottom: 50px">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-8">
                        <h3>{{ formPageTitle }}</h3>
                    </div>
                    <div class="col-4 text-right">

                        <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top"
                                title="Novo registro"
                                onclick="window.location.href='{{ url(formRoute) }}'">
                            <i class="fas fa-file" aria-hidden="true"></i> Novo
                        </button>

                        <button type="button" class="btn btn-secondary"
                                onclick="window.location.href='{{ url('aPagarReceber_list') }}'">
                            <i class="fas fa-sync" aria-hidden="true"></i> Listar
                        </button>

                    </div>
                </div>

            </div>

            <div class="card-body">

                {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

                {{ form_start(form) }}

                {{ form_row(form._token) }}

                <div style="display: none">
                    {{ form_row(form.status) }}
                    {{ form_row(form.tipoLancto) }}
                    {{ form_row(form.modo) }}
                    {{ form_row(form.carteira) }}
                    {{ form_row(form.centroCusto) }}
                    {{ form_row(form.categoria) }}
                </div>

                {{ form_row(form.documentoNum) }}
                {{ form_row(form.sacado) }}
                {{ form_row(form.cedente) }}
                {{ form_row(form.carteira) }}

                {{ form_row(form.dtMoviment) }}
                {{ form_row(form.dtVencto) }}
                {{ form_row(form.dtVenctoEfetiva) }}
                {{ form_row(form.dtPagto) }}

                <div style="margin-top: 20px" id="divCamposValores" class="card">
                    <h5 class="card-header">Valores</h5>
                    <div class="card-body">
                        {{ form_row(form.valor) }}
                        {{ form_row(form.descontos) }}
                        {{ form_row(form.acrescimos) }}
                        {{ form_row(form.valorTotal) }}
                    </div>
                </div>

                {{ form_row(form.descricao) }}

                {{ form_row(form.quitado) }}



                <div style="margin-top: 20px" class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary" value="Salvar">
                            <i class="fas fa-save" aria-hidden="true"></i> Salvar
                        </button>
                    </div>
                </div>


                {{ form_end(form, {'render_rest': false}) }}


            </div>
        </div>
    </div>

{% endblock %}


{% block down_scripts %}
    <script src="{{ asset('build/Financeiro/movimentacaoForm_aPagarReceber.js') }}"></script>
{% endblock %}